<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lovelyhearts.poker.LocationActivity">

    <fragment
        android:id="@+id/list_certainlocation"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        class="com.example.lovelyhearts.poker.CertainlocationFragment"
        android:layout_below="@+id/title_certainlocation" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Certain Location"
        android:id="@+id/title_certainlocation"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/list_certainlocation"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />


</RelativeLayout>
