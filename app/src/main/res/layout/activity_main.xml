<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:id="@+id/btn_createAccount"
        android:layout_below="@+id/tvPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp" />

    <TextView
        android:id="@+id/lblSignIn"
        android:text="@string/SignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/userlabel"
        android:padding="8dp"
        android:textSize="16sp"
        android:clickable="true"
        android:layout_alignTop="@+id/lblSignIn"
        android:layout_toEndOf="@+id/lblSignIn"
        android:layout_marginStart="63dp"
        android:textAlignment="center"></Spinner>

    <EditText
        android:id="@+id/tvUserName"
        android:text="Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#adf"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/lblSignIn"/>

    <EditText
        android:id="@+id/tvPassword"
        android:text="Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#adf"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/tvUserName"/>

</RelativeLayout>
