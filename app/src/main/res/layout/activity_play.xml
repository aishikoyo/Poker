<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lovelyhearts.poker.PlayActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Table Number:"
        android:textSize="20dp"
        android:id="@+id/lbl_tablenum"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:id="@+id/txtTableNum"
        android:text="1"
        android:editable="false"
        android:enabled="true"
        android:textAlignment="center"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/lbl_tablenum" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of Seats:"
        android:textSize="20dp"
        android:id="@+id/lbl_seatnum"
        android:layout_alignBottom="@+id/txtSeatNum"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:id="@+id/txtSeatNum"
        android:text="5"
        android:textAlignment="center"
        android:editable="false"
        android:enabled="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_below="@+id/txtTableNum"
        android:layout_toEndOf="@+id/lbl_seatnum" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Game"
        android:id="@+id/btn_joingame"
        android:layout_marginBottom="38dp"
        android:layout_above="@+id/btn_out"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Out"
        android:id="@+id/btn_out"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tables"
        android:id="@+id/btn_tables"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/btn_out"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
