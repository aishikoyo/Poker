<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lovelyhearts.poker.EditaccountActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="20dp"
        android:id="@+id/lbl_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editaccount_name"
        android:editable="true"
        android:ems="17"
        android:padding="8dp"
        android:background="#adf"
        android:layout_below="@+id/lbl_name"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="20dp"
        android:id="@+id/lbl_email"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/editaccount_name"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editaccount_email"
        android:editable="true"
        android:ems="17"
        android:padding="8dp"
        android:background="#adf"
        android:layout_below="@+id/lbl_email"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:textSize="20dp"
        android:id="@+id/lbl_username"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/editaccount_email"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editaccount_username"
        android:editable="true"
        android:ems="17"
        android:padding="8dp"
        android:background="#adf"
        android:layout_below="@+id/lbl_username"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone:"
        android:textSize="20dp"
        android:id="@+id/lbl_phone"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/editaccount_username"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editaccount_phone"
        android:editable="true"
        android:ems="17"
        android:padding="8dp"
        android:background="#adf"
        android:layout_below="@+id/lbl_phone"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:textSize="20dp"
        android:id="@+id/lbl_address"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/editaccount_phone"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editaccount_address"
        android:editable="true"
        android:ems="17"
        android:padding="8dp"
        android:background="#adf"
        android:layout_below="@+id/lbl_address"
        android:layout_alignParentStart="true" />
</RelativeLayout>



